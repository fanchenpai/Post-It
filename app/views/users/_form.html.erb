<%= render 'shared/form_error', object: @user %>

<%= form_for @user do |f| %>
  <%= f.label :username%>
  <%= f.text_field :username %>

  <%= f.label :password, ['edit','update'].include?(params[:action]) ? 'Change password' : 'Password' %>
  <%= f.password_field :password %>
  <br />
  <%= f.submit "Submit", class:"btn btn-primary" %>
<% end %>