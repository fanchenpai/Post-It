<%= render 'shared/form_error', object: @post %>

<%= form_for @post do |f| %>

  <%= f.label :title, "Title" %>
  <%= f.text_field :title %>
  <%= f.label :url, "Url" %>
  <%= f.text_field :url %>
  <%= f.label :description, "Description" %>
  <%= f.text_area :description %>
  <br />
  <%= f.collection_check_boxes(:category_ids, @categories, :id, :name) do |b| %>
    <%= b.label(class: 'inline checkbox') { b.check_box + b.text} %>
  <% end %>
  <hr />
  <%= f.submit "Save", class: "btn btn-primary" %>

<% end %>